<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_viewtotal"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


            <ImageView
                android:id="@+id/cartotal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/car_micro_blue" />

            <RelativeLayout
                android:id="@+id/linear_totalcar_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/cartotal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daytime_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed 28th Dec 11.30 am"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardetails_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/daytime_total"
                    android:layout_marginTop="5dp"
                    android:text="Micro. CRN:5674535"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="#18C302"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Scheduled"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="visible"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_totalcar_details">

                <RelativeLayout
                    android:id="@+id/rlDot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/red"
                        android:layout_below="@+id/green"
                        android:layout_centerInParent="true"
                        android:background="@color/grey" />

                    <ImageView
                        android:id="@+id/green"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="-6dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="7dp"
                        android:src="@mipmap/green_circle" />

                    <ImageView
                        android:id="@+id/red"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="-6dp"
                        android:src="@mipmap/red_circle" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlAdd"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/rlDot">

                    <TextView
                        android:id="@+id/pickup_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="14, Canal Road, Jagannath Nagar, Rasulgarh, Bhubaneswar, Odisha"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/drop_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="14, Canal Road, Jagannath Nagar, Rasulgarh, Bhubaneswar, Odisha"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </RelativeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/trip_driver_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/driver_image" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/ivRideCanceled"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ride_canceled"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>