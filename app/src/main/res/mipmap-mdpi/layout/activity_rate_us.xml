<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/headToolTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Feedback"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSubmit"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_grey"
                android:src="@mipmap/ride_very_bad" />

            <TextView
                android:id="@+id/tvEmojiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivEmoji"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Very Bad!"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmojiName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:contextClickable="false"
                app:srb_borderColor="@color/colorAccent"
                app:srb_fillColor="@color/colorAccent"
                app:srb_isIndicator="false"
                app:srb_numberOfStars="5"
                app:srb_starSize="26dp"
                app:srb_rating="1"
                app:srb_stepSize="1" />

            <TextView
                android:id="@+id/tvTell"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ratingbar"
                android:layout_marginTop="20dp"
                android:background="#cfcfdc"
                android:gravity="center"
                android:text="Tell us what went wrong"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTell" />

            <TextView
                android:id="@+id/tvLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="Leave a comment"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/tvLeave"
                android:layout_margin="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/diagonal_border_blue"
                android:backgroundTint="@null" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>